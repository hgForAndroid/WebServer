@model WebServer.Models.Vote.VoteInfo
@{
    Layout = "~/Views/Shared/_Layout_organizor.cshtml";
    ViewBag.Title = "中佰会议系统组织者";
}
@section BodyLess{
    <link href="~/less/vote/edit.less" type="text/css" rel="stylesheet">
}

<div>
    <input type="hidden" id="agendaID" value="@Session["agendaID"]" />
    <input type="hidden" id="meetingID" value="@Session["meetingID"]" />
</div>

<div class="container" id="mainContent">
    <div class="panel panel-default" id="mainContentRight">
        <div>
            <div class="col-md-6">
                <h2><strong>编辑会议议程投票信息</strong></h2>
            </div>
            <div class="col-md-4">
            </div>
            <div class="col-md-2 ">
                <br />
                <button class="btn btn-default cancel" type="button" id="cancel1" >取消编辑</button>
            </div>
        </div>
        <hr style="FILTER: alpha(opacity=100,finishopacity=0,style=3)" width="100%" color=#987cb9 size=3>
        <div id="editVoteInfo">
            <div>
                <input type="hidden" class="voteID" value="@Model.voteID" />
                <div class="col-md-6">
                    <div>
                        <div id="voteName">投票名称：</div>
                        <input type="text" id="agendaNameInput" value="@Model.voteName" class="voteName">
                    </div>
                    <div id="voteContent">
                        <div>投票内容：</div>
                        <textarea class="voteDescription">@Model.voteDescription</textarea>
                    </div>
                    <div>
                        <div id="voteType">投票类型：</div>
                        <div class="btn-group voteType" id="select">
                            <select name="select" id="select" class="xla_k">
                                <option value="0" id="select1" @(Model.voteID == 0 ? "selected" : "")>任选</option>
                                <option value="1" id="select2" @(Model.voteID == 1 ? "selected" : "")>单选</option>
                                <option value="2" id="select3" @(Model.voteID == 2 ? "selected" : "")>双选</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div>
                        <div id="optionNumber">选项数目：</div>
                        <input type="number" id="agendaTimeInput" class="optionNum" value="@Model.optionNum">
                    </div>
                    <div>
                        <div id="optionContent">选项内容：</div>
                        <form>
                            <div id="inputGroup">
                                @{
                                    var i = 1;
                                    foreach (var optionName in Model.options)
                                    {
                                        <p>@i. <input type="text" value="@optionName" index="@i" class="voteOption"></p>
                                        i = i + 1;
                                    }
                                }
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-md-offset-3"></div>
            <div class="col-md-5 col-md-offset-2" id="buttonGroup">
                @*<button class="btn btn-default" type="button" >返回该议程</button>&nbsp;&nbsp;*@
                <button class="btn btn-default keep" type="button">保存投票信息</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/vote/edit.js"></script>