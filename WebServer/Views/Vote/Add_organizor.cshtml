@{
    Layout = "~/Views/Shared/_Layout_organizor.cshtml";
    ViewBag.Title = "中佰会议系统组织者";
}
@section BodyLess{
    <link href="~/less/vote/add.less" type="text/css" rel="stylesheet">
}

<div>
    <input type="hidden" id="agendaID" value="@Session["agendaID"]" />
    <input type="hidden" id="meetingID" value="@Session["meetingID"]" />
</div>

<div class="container" id="mainContent">
    <div class="panel panel-default" id="mainContentRight">
        <div>
            <div class="col-md-8">
                <h2><strong>编辑投票</strong></h2>
            </div>
            <div class="col-md-4 ">
                <br />
                <p><button class="btn btn-default cancel" type="button" id="cancel1">返回</button></p>
                <div id="ContentRightHeadState">
                    状态:<span id="Status"></span>
                </div>
                </div>
        </div>
        <hr style="FILTER: alpha(opacity=100,finishopacity=0,style=3)" width="100%" color=#987cb9 size=3>
        <div id="editVoteInfo">
            <div>
                <div class="col-md-6">
                    <div>
                        <div id="voteName">投票名称：</div>
                        <input type="text" id="agendaNameInput" class="voteName">
                    </div>
                    <div id="voteContent">
                        <div>投票内容：</div>
                        <textarea class="voteDescription"></textarea>
                    </div>
                    <div>
                        <div id="voteType">投票类型：</div>
                        <div class="btn-group voteType" id="select">
                            <label for="selectOptionNum">可选选项数量</label>
                            <input name="select" id="selectOptionNum" class="xla_k" type="number" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div>
                        <div id="optionNumber">选项数目：</div>
                        <input type="number" id="agendaTimeInput" class="optionNum">
                    </div>
                    <div>
                        <div id="optionContent">选项内容：</div>
                        <form>
                            <div id="input">
                            <div id="inputGroup" class="table-responsive">
                                @*<p>1. <input type="text" id="input1"></p>
                                <p>2. <input type="text" id="input2"></p>
                                <p>3. <input type="text" id="input3"></p>*@
                            </div>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-md-offset-3"></div>
            <div class="col-md-5 col-md-offset-2" id="keep">
                <button class="btn btn-default keep" type="button" >保存</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/vote/add.js" charset="gbk"></script>