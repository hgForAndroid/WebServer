<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" type="text/css" href="/node_modules/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="/node_modules/bootstrap-datetimepicker-master/less/datetimepicker.less">
    <link rel="stylesheet" type="text/css" href="/node_modules/bootstrap-datetimepicker-master/css/jquery-ui.css">

    <script src="/node_modules/jquery/dist/jquery.js"></script>
    <script src="/node_modules/less/dist/less.js"></script>
    <script src="/node_modules/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/node_modules/angular/angular.js"></script>
    <script src="/node_modules/bootstrap-datetimepicker-master/js/bootstrap-datetimepicker.js"> </script>

    <link type="text/css" rel="stylesheet" href="~/less/common/admin.less" />
    <script src="~/js/common/admin.js"></script>

    @RenderSection("BodyLess", required: false);
</head>
<body>
    <div class="navbar navbar-fixed-top" id="mainMenu">
        <div class="container">
            <div class="navbar-header col-md-2">
                <a class="navbar-brand" href="#">
                    <img alt="Brand" src="/images/u46.png">
                </a>
            </div>
            <p class="navbar-text col-md-6">中佰会议管理员界面</p>
            <ul class="col-md-4" id="signUpWindow">

                @if (Session["userName"] != null)
                {
                    <ol class="col-md-6">
                        <b>管理员</b>&nbsp;&nbsp;
                        <b>@Session["userName"]</b>
                        <button type="button" class="btn btn-xs">
                            <!--超小按钮-->
                            <span class="glyphicon glyphicon-user"></span>
                            <!--这些图标的使用要引入boorstrap的font-->
                        </button>
                    </ol>
                    <ol class="col-md-2"></ol>
                    <ol class="col-md-4">
                        <button type="button" class="btn btn-xs logout">
                            退出系统
                        </button>
                    </ol>
                }
                else
                {
                    <ol class="col-md-6"><a href="/Account/Index">请登录</a></ol>
                }

            </ul>
        </div>
    </div>

    <div class="container" id="mainContent">
        <div class="panel panel-default col-md-2" id="mainContentLeft">
            <div class="panel-heading">
                <p class="panel-title">管理导航</p>
            </div>
            <ul class="nav nav-stacked panel-body" role="tablist">
                <li role="presentation" class="active"><a href="/Account/Admin">首页</a></li>
                <li role="presentation"><a href="/MeetingPlace/Index_admin">会场管理</a></li>
                <li role="presentation"><a href="/User/Index_admin">人员管理</a></li>
                <li role="presentation"><a href="/Role/Index_admin">角色管理</a></li>
                <li role="presentation"><a href="/Device/Index_admin">设备管理</a></li>
            </ul>
        </div>
        @RenderBody()
    </div>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
</body>
</html>
