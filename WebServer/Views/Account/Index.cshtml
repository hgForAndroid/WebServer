@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head >
    <title>登录界面</title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")             <!-- 1 -->
    @Scripts.Render("~/bundles/modernizr")      <!-- 原理同上 -->
    @Scripts.Render("~/bundles/jquery")

  

    <script src="/node_modules/jquery/dist/jquery.js"></script>
    <script src="/node_modules/less/dist/less.js"></script>
    <script src="/node_modules/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/node_modules/angular/angular.js"></script>
    <script src="/node_modules/bootstrap-datetimepicker-master/js/bootstrap-datetimepicker.js"> </script>


    <link type="text/css" rel="stylesheet" href="~/less/account/index.less" />
</head>
<body>
    <fieldset id="login">
        <p><strong>中佰会议管理系统</strong></p>
        <p><strong>登录界面</strong></p>
        <div id="input">
            <div id="userName">
                <label for="userNameInput">用户名</label>
                <input type="text" name="userName" class="userName" id="userNameInput" value="超级管理员" />
            </div>
            <div id="password">
                <label for="passwordInput">密码</label>
                <input type="password" name="password" class="password" id="passwordInput" value="123456" />
            </div>
        </div>
        <div id="select">
            <label>系统 :</label>
            <input type="radio" name="system" class="system" id="admin" value="Admin"   checked />
            <label for="admin">管理员</label>
            <input type="radio" name="system" class="system" id="organizor" value="Organizor" />
            <label for="organizor">会议组织者</label>
        </div>
        <hr />
        <input type="button" value="登录" id="loginBtn" />
    </fieldset>

    <script src="~/js/account/index.js" type="text/javascript"></script>
</body>
</html>
