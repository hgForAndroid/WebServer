            }
        });
    };

    function postDeleteUsers() {
        $.ajax({
            type: "POST",
            url: "/User/ChangeUserStatus",
            contentType: "application/json",
            dataType: "json",
            data: JSON.stringify({
                "userID": 21,
                "available":1
            }
                ),
            success: function (jsonResult) {
                alert(JSON.stringify(jsonResult));
            }
        });
    };

    function getUsers() {
        $.ajax({
            type: "POST",
            url: "/User/GetUsers",
            contentType: "application/json",
            dataType: "json",
            success: function (jsonResult) {
                alert(JSON.stringify(jsonResult));
            }
        });
    };
    </script>
</head>
