                [
                  24,25,26,27
                ]
                ),
            success: function (jsonResult) {
                alert(JSON.stringify(jsonResult));
            }
        });
    };

    function getUsers() {
        $.ajax({
            type: "POST",
            url: "/User/GetUsers",
            contentType: "application/json",
            dataType: "json",
            success: function (jsonResult) {
                alert(JSON.stringify(jsonResult));
            }
        });
    };
    </script>
</head>
