}
<head>
    <title></title>
    <script>
    function postCreateUser() {
        $.ajax({
            type: "POST",
            url: "/User/CreateUser",
            contentType: "application/json",
            dataType: "json",
            data: JSON.stringify({
                "userName": "谢庆雄",
                "userDepartment": "华工C16",
                "userJob": "测试员",
                "userDescription": "测试android",
                "roleID": 3
            }),
            success: function (jsonResult) {
                alert(JSON.stringify(jsonResult));
            }
        });
    };

    function postUpdateUser() {
        $.ajax({
            type: "POST",
            url: "/User/UpdateUser",
            contentType: "application/json",
            dataType: "json",
            data: JSON.stringify({
                "userID":24,
