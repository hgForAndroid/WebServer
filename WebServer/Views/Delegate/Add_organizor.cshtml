@model Tuple<List<WebServer.Models.User.UserForDelegate>,List<WebServer.Models.Device.DeviceForDelegate>>
@{
    Layout = "~/Views/Shared/_Layout_organizor.cshtml";
    ViewBag.Title = "中佰会议系统组织者";
}

@section BodyLess{
    <link href="~/less/delegate/add.less" type="text/css" rel="stylesheet">
}
   
<div>
    <input type="hidden" id="meetingID" value="@Session["meetingID"]" />
</div>

<div class="container" id="mainContent">
    <div class="panel panel-default" id="mainContentRight">
        <div>
            <div class="col-md-6 ">
                <h1><strong>参会人员</strong></h1>
            </div>
            <div class="col-md-4">
            </div>
            <div class="col-md-2 ">
                <br />
                <button class="btn btn-default cancel" type="button" id="cancel1">取消</button>
            </div>
            <span id="ContentRightHeadState">
                状态:<span id="Status">创建成功</span>
            </span>
        </div>
        <hr style="FILTER: alpha(opacity=100,finishopacity=0,style=3)" width="100%" color=#987cb9 size=3>
        <div id="peopleDeviceSelect">
            <div id="peopleSelect">
                人员选择：
                <div class="btn-group">
                    <select name="select" class="xla_k userID">
                        @foreach (var user_add in Model.Item1)
                        {
                           <option value="@user_add.userID">@user_add.userName</option>
                        }
                    </select>
                </div>
                <button class="btn btn-default" type="button" id="newPeople" >添加人员</button>
            </div>
            <div id="deviceSelect">
                设备选择：
                <div class="btn-group">
                    <select name="select" class="xla_k deviceID">
                       @foreach (var device_add in Model.Item2)
                       {
                           <option value="@device_add.deviceID">@device_add.deviceIndex</option>
                       }
                    </select>
                </div>
            </div>
            <div id="meetingRoleSelect">
                角色选择：
                <div class="btn-group">
                    <select name="select" class="xla_k meetingRole">
                       <option value="0">参会人员</option>
                       <option value="1">主持人</option>
                        <option value="2">主讲人</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-md-offset-3"></div>
            <div class="col-md-4 col-md-offset-3" id="edit">
                <button class="btn btn-default save" type="button" id="keep" >保存</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Delegate/add.js"></script>
