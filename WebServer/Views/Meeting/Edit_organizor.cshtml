@model WebServer.Models.Meeting.EditMeetingModel
@{
    Layout = "~/Views/Shared/_Layout_organizor.cshtml";
    ViewBag.Title = "中佰会议系统组织者";
}
@section BodyLess{
    <link href="~/less/meeting/edit.less" type="text/css" rel="stylesheet">
}
<div>
    <input type="hidden" id="meetingID" value="@Session["meetingID"]" />
</div>
<div class="container" id="mainContent">
    <div class="panel panel-default" id="mainContentRight">
        <div>
            <div class="col-md-4 ">
                <h1><strong>编辑会议信息</strong></h1>
            </div>
            <div class="col-md-6">
                <br />
                <ol class="breadcrumb">
                    <li><a class="returnIndex" href="#">首页</a></li>
                    <li><a class="cancel" href="#">@Model.meeting.meetingName</a></li>
                    <li class="active">编辑会议信息</li>
                </ol>
            </div>
            <div class="col-md-2 ">
                <br />
                <button class="btn btn-default cancel" type="button" id="cancel1" >取消编辑</button>
            </div>
            <span id="ContentRightHeadState">
                状态:<span id="Status"></span>
            </span>
        </div>
        <hr style="FILTER: alpha(opacity=100,finishopacity=0,style=3)" width="100%" color=#987cb9 size=3>
        <div id="foundmeeting">
            <div>
                <div id="meetingname"> 填写会议名称：</div>
                <input type="text" class="meetingName" name="meeting.meetingName" value="@Model.meeting.meetingName" form="meetingForm" />
                @*@Html.EditorFor(m => m.meeting.meetingName, new { form="meetingForm",@class="meetingName" })*@
                @Html.ValidationMessageFor(m => m.meeting.meetingName)
            </div>
            <div>
                <div id="meetingtime">
                    会议开始时间：
                </div>
                <input type="text" class="meetingToStartTime" id="timeSelect1" name="meeting.meetingToStartTime" form="meetingForm"
                       value="@Model.meeting.meetingToStartTime.ToString("yyyy-MM-dd hh:mm")" />
            </div>
            <div>
                <div id="meetingtime">
                    会议结束时间：
                </div>
                <input type="text" class="meetingStartedTime" id="timeSelect2" name="meeting.meetingStartedTime" form="meetingForm"
                       value="@Model.meeting.meetingStartedTime.ToString("yyyy-MM-dd hh:mm")" />
            </div>
            <div>
                <div id="meetingselect">会场选择：</div>
                <div class="btn-group" id="select">
                    <select name="meeting.meetingPlaceID" class="xla_k meetingPlaceID" form="meetingForm">
                        @foreach (var meetingPlace in Model.meetingPlaces)
                        {
                            if (meetingPlace.meetingPlaceID == Model.meeting.meetingPlaceID)
                            {
                                <option value="@meetingPlace.meetingPlaceID" selected>@meetingPlace.meetingPlaceName</option>
                            }
                            else
                            {
                                <option value="@meetingPlace.meetingPlaceID">@meetingPlace.meetingPlaceName</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div id="meetingcontent">
                <div>会议概况：</div>
                <textarea name="meeting.meetingSummary" class="meetingSummary" form="meetingForm">
                    @Model.meeting.meetingSummary
                </textarea>
            </div>     
        </div>
        <div class="row">
            <div class="col-md-2 col-md-offset-3"></div>
            <div class="col-md-4 col-md-offset-3" id="cancel2next">
                <button class="btn btn-default cancel" type="button" id="cancel2" >取消编辑</button>&nbsp;&nbsp;
                <button class="btn btn-default keep" type="button" id="next" >保存编辑</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/meeting/edit.js"></script>
